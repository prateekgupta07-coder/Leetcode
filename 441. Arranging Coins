class Solution {
public:
    int arrangeCoins(long n) {
        long l = 0, r = n, ans = 0;
        while (l <= r) {
            long mid = l + (r - l) / 2;
            long sum = mid * (mid + 1) / 2;
            if (sum <= n) {
                ans = mid;
                l = mid + 1;
            } else {
                r = mid - 1;
            }
        }
        return ans;
    }
};
