class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int ulta = 0, seedha = arr.size() - 1;
        while (ulta < seedha) {
            int mid = ulta + (seedha - ulta) / 2;
            if (arr[mid] < arr[mid + 1]) ulta = mid + 1;
            else seedha = mid;
        }
        return ulta;
    }
};
